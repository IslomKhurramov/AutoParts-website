<%- include('includes/header') %>
<link rel="stylesheet" type="text/css" href="/css/login.css" />

<body>
  <form action="/resto/login" method="POST" class="login_container">
    <div class="login_frame" style="height: 460px">
      <div class="login_top">
        <span>Login</span>
        <div>Home Page <a href="/resto" style="color: #6440fb">Home</a></div>
        <p>
          Registered?
          <a href="/resto/sign-up" style="color: #6440fb">Sign Up</a>
        </p>
      </div>

      <div class="login_input_frame">
        <div class="login_input_container">
          <label>Username</label>
          <input
            name="mb_nick"
            type="text"
            placeholder="Username"
            value=""
            required />
        </div>
        <div class="login_input_container">
          <label>Passowrd</label>
          <input
            name="mb_password"
            type="password"
            placeholder="Password"
            value=""
            required />
        </div>
      </div>

      <button class="login_btn btn" name="login" type="submit">Login</button>
    </div>
  </form>
</body>

<%- include('includes/footer') %>
